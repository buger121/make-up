/* packageShop/pages/detail/detail.wxss */
.body {
  padding-bottom: 130rpx;
}
/* 轮播图 */
.swiper {
  width: 100%;
}
.slide-image {
  width: 100%;
  height: 600rpx;
}
/* 基本信息 */
.basicInfo {
  margin-top: 20rpx;
  width: 100%;
  padding: 20rpx 35rpx;
  background: #fff;
  box-sizing: border-box;
  color: rgb(16, 16, 16);
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.basicInfo .desc {
  display: block;
  margin-bottom: 20rpx;
  letter-spacing: 0.1em;
}
.price {
  color: rgb(238, 78, 78);
}
/* 物流信息 */
.deliveryInfo {
  background: #fff;
  width: 100%;
  margin: 20rpx 0;
  font-size: 29rpx;
  box-sizing: border-box;
  padding: 30rpx 0;
}
.deliveryInfo text {
  border-right: 1px solid #bbb;
  display: inline-block;
  box-sizing: border-box;
  padding: 0 10rpx;
  text-align: center;
}
.deliveryInfo text:nth-child(1){
  width: 38%;
}
.deliveryInfo text:nth-child(2) {
  width: 24%;
}
.deliveryInfo text:nth-child(3) {
  width: 38%;
  border-right: none;
}
/* 按钮组件 */
.btns {
  width: 100%;
  border: 1px dashed #1E1D1D;
  background-color: #fff;
  font-size: 30rpx;
  display: flex;
  flex-wrap: nowrap;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btn {
  display: flex;
  width: 33%;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 32rpx 0;
  border-right: 1px dashed #1E1D1D;
  color: #1E1D1D;
}
.btn image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 5rpx;
}
.btns .btn:last-child {
  border-right: none;
}