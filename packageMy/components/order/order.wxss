/* components/order/order.wxss */
.wraper {
  width: 100%;
  background: #fff;
  font-size: 25rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.up {
  display: flex;
  flex-wrap: nowrap;
}
.up image {
  width: 170rpx;
  height: 170rpx;
}
.right {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  color: #101010;
}
.desc {
  margin-bottom: 10rpx;
}
/* .args {
  margin-bottom: 10rpx;
} */
.tradeStatus {
  color: #E51C23;
  position: relative;
  top: 0;
  left: 420rpx;
}
.down {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  padding-bottom: 10rpx;
}
.more {
  font-weight: bold;
  font-size: 30rpx;
  position: relative;
  top: -10rpx;
}
.comment {
  color: #E51C23;
}
