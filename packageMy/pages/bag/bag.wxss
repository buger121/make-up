/* packageMy/pages/bag/bag.wxss */
/* 购物车为空 */
.empty {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.empty image {
  width: 280rpx;
  height: 280rpx;
}
.empty .desc {
  color: #101010;
  font-size: 45rpx;
}
.empty .btn {
  padding: 30rpx 70rpx;
  background-color: #1E1D1D;
  color: #fff;
  border-radius: 70rpx;
}

/* 结算 */
.settle {
  width: 100%;
  background:#fff;
  font-size: 28rpx;
  color: #101010;
  display: flex;
  flex-wrap: nowrap;
  position: fixed;
  left: 0;
  bottom: 0;
}
.settle .set {
  box-sizing: border-box;
  padding: 25rpx 0;
  text-align: center;
}
.check image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.settle .check{
  width: 30%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}
.settle .cost{
  width: 40%;
  display: flex;
  flex-direction: column;
}
.settle .price{
  width: 40%;
  display: flex;
  flex-direction: column;
  border: 1px dashed #101010;
}