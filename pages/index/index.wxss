/**index.wxss**/

/* header */


/* swiper */
.swiper {
  width: 100%;
  margin-top: 50rpx;
  background-color: #fff;
}
.slide-image {
  width: 100%;
  height: 370rpx;
}

.line{
margin: 20rpx auto;
width: 150rpx;
height: 2rpx;
background-color: #D8D8D8;
}
/* 品牌 */
.contents {
  margin-top: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.content {
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  align-items: center;
  margin: 10rpx 10rpx;
}
.content image{
  width: 140rpx;
  height: 120rpx;
  margin-bottom: 5rpx;
}
/* 分类 */
.category .content{
  font-size: 23rpx;
}
.first image {
  padding-bottom: 35rpx;
  border-bottom: 1px solid #E1A2BA;
}
/* 分享区 */
.shares {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
  background-color: #fff;
}
.share {
  width: 48%;
  margin: 10 rpx 20rpx; 
}

